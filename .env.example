# Database - PostgreSQL
POSTGRES_DB=ebrecho_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/ebrecho_dev
DIRECT_URL=postgresql://postgres:your_secure_password_here@localhost:5432/ebrecho_dev

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_EXPIRES_IN="7d"

# Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880
ALLOWED_MIME_TYPES="image/jpeg,image/png,image/webp"

# Email - Configure your SMTP provider
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT=587
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="eBrecho"

# URLs
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000
API_URL=http://localhost:3001/api
FRONTEND_URL=http://localhost:3000

# Server
PORT=3001
NODE_ENV=development

# Admin - Change these in production!
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password

# Google Places API (optional)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here